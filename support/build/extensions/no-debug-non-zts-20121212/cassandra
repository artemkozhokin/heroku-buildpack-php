#!/usr/bin/env bash

wget https://downloads.datastax.com/cpp-driver/ubuntu/14.04/v2.3.0/cassandra-cpp-driver-dev_2.3.0-1_amd64.deb
wget https://downloads.datastax.com/cpp-driver/ubuntu/14.04/v2.3.0/cassandra-cpp-driver_2.3.0-1_amd64.deb
wget https://downloads.datastax.com/cpp-driver/ubuntu/14.04/dependencies/libuv/v1.8.0/libuv-dev_1.8.0-1_amd64.deb
wget https://downloads.datastax.com/cpp-driver/ubuntu/14.04/dependencies/libuv/v1.8.0/libuv_1.8.0-1_amd64.deb

dpkg -i libuv_1.8.0-1_amd64.deb && rm -f libuv-dev_1.8.0-1_amd64.deb
dpkg -i libuv-dev_1.8.0-1_amd64.deb && rm -f libuv-dev_1.8.0-1_amd64.deb
dpkg -i cassandra-cpp-driver_2.3.0-1_amd64.deb && rm -f cassandra-cpp-driver_2.3.0-1_amd64.deb
dpkg -i cassandra-cpp-driver-dev_2.3.0-1_amd64.deb && rm -f cassandra-cpp-driver-dev_2.3.0-1_amd64.deb

dep_name=$(basename $BASH_SOURCE)

source $(dirname $BASH_SOURCE)/../pecl
